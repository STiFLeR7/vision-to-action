{
  "name": "Vision-to-Action Anomaly Escalation",
  "nodes": [
    {
      "parameters": {
        "httpMethod": "POST",
        "path": "vision-to-action-anomaly",
        "responseMode": "responseNode",
        "options": {}
      },
      "id": "webhook-trigger",
      "name": "Webhook Trigger",
      "type": "n8n-nodes-base.webhook",
      "typeVersion": 1,
      "position": [
        250,
        300
      ],
      "webhookId": "vision-to-action-anomaly"
    },
    {
      "parameters": {
        "conditions": {
          "string": [
            {
              "value1": "={{ $json.body.severity }}",
              "operation": "equal",
              "value2": "high"
            },
            {
              "value1": "={{ $json.body.severity }}",
              "operation": "equal",
              "value2": "critical"
            }
          ]
        },
        "combineOperation": "any"
      },
      "id": "severity-check",
      "name": "Check Severity",
      "type": "n8n-nodes-base.if",
      "typeVersion": 1,
      "position": [
        450,
        300
      ]
    },
    {
      "parameters": {
        "jsCode": "return $input.all().map(item => {\n  const anomaly = item.json.body || item.json;\n  \n  const emailBody = `\n\u26a0\ufe0f ANOMALY DETECTED \u26a0\ufe0f\n======================\n\nAnomaly ID: ${anomaly.anomaly_id || 'N/A'}\nSeverity: ${(anomaly.severity || 'UNKNOWN').toUpperCase()}\nTimestamp: ${anomaly.timestamp || 'N/A'}\n\nDescription:\n${anomaly.description || 'N/A'}\n\nEvent ID: ${anomaly.event_id || 'N/A'}\n\nGemini Analysis:\n${anomaly.gemini_explanation || 'Not available'}\n\nRecommended Actions:\n${anomaly.recommended_actions || 'Manual review required'}\n\nThis requires immediate attention.\n`;\n\n  return {\n    json: {\n      subject: `\ud83d\udea8 CRITICAL ANOMALY: ${anomaly.anomaly_type || 'Unknown Type'}`,\n      body: emailBody,\n      anomaly_id: anomaly.anomaly_id,\n      severity: anomaly.severity\n    }\n  };\n});"
      },
      "id": "format-alert",
      "name": "Format Alert",
      "type": "n8n-nodes-base.code",
      "typeVersion": 1,
      "position": [
        650,
        200
      ]
    },
    {
      "parameters": {
        "fromEmail": "vision-system@example.com",
        "toEmail": "admin@example.com",
        "subject": "={{ $json.subject }}",
        "emailType": "text",
        "message": "={{ $json.body }}"
      },
      "id": "send-critical-email",
      "name": "Send Critical Alert",
      "type": "n8n-nodes-base.emailSend",
      "typeVersion": 2,
      "position": [
        850,
        200
      ]
    },
    {
      "parameters": {
        "webhookUri": "https://discord.com/api/webhooks/YOUR_WEBHOOK_ID/YOUR_WEBHOOK_TOKEN",
        "content": "={{ 'ðŸš¨ **CRITICAL ANOMALY DETECTED**\\n\\nâ€¢ **Type:** ' + $json.body.anomaly_type + '\\nâ€¢ **Severity:** ' + $json.body.severity.toUpperCase() + '\\nâ€¢ **Description:** ' + $json.body.description + '\\nâ€¢ **Gemini:** ' + $json.body.gemini_explanation }}"
      },
      "id": "discord-notification",
      "name": "Discord Notification",
      "type": "n8n-nodes-base.discord",
      "typeVersion": 1,
      "position": [
        650,
        400
      ]
    },
    {
      "parameters": {
        "operation": "executeQuery",
        "query": "INSERT INTO anomaly_escalations (anomaly_id, severity, timestamp, escalated_at) VALUES ('{{ $json.anomaly_id }}', '{{ $json.severity }}', '{{ $json.timestamp }}', NOW())"
      },
      "id": "log-escalation",
      "name": "Log Escalation",
      "type": "n8n-nodes-base.postgres",
      "typeVersion": 2,
      "position": [
        850,
        400
      ]
    },
    {
      "parameters": {
        "respondWith": "json",
        "responseBody": "={{ { \"status\": \"escalated\", \"anomaly_id\": $json.anomaly_id } }}"
      },
      "id": "webhook-response",
      "name": "Webhook Response",
      "type": "n8n-nodes-base.respondToWebhook",
      "typeVersion": 1,
      "position": [
        1050,
        300
      ]
    }
  ],
  "connections": {
    "Webhook Trigger": {
      "main": [
        [
          {
            "node": "Check Severity",
            "type": "main",
            "index": 0
          }
        ]
      ]
    },
    "Check Severity": {
      "main": [
        [
          {
            "node": "Format Alert",
            "type": "main",
            "index": 0
          },
          {
            "node": "Slack Notification",
            "type": "main",
            "index": 0
          }
        ]
      ]
    },
    "Format Alert": {
      "main": [
        [
          {
            "node": "Send Critical Alert",
            "type": "main",
            "index": 0
          }
        ]
      ]
    },
    "Send Critical Alert": {
      "main": [
        [
          {
            "node": "Webhook Response",
            "type": "main",
            "index": 0
          }
        ]
      ]
    },
    "Slack Notification": {
      "main": [
        [
          {
            "node": "Log Escalation",
            "type": "main",
            "index": 0
          }
        ]
      ]
    },
    "Log Escalation": {
      "main": [
        [
          {
            "node": "Webhook Response",
            "type": "main",
            "index": 0
          }
        ]
      ]
    }
  },
  "settings": {
    "saveDataSuccessExecution": "all",
    "saveDataErrorExecution": "all"
  }
}